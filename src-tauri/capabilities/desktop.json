{
  "identifier": "desktop-capability",
  "platforms": ["macOS", "windows", "linux"],
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-app-read-recursive",
    {
      "identifier": "fs:scope",
      "allow": ["*/**"]
    },
    "shell:allow-open",
    "dialog:allow-open",
    "notification:default",
    "notification:default",
    "updater:default"
  ]
}
